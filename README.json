{
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.CustomBrowser": "chrome",
    "[python]": {
        "editor.formatOnType": true
    },
    "workbench.colorTheme": "JellyFish-x-Retro", //theme màu tím (có thể lên gõ "theme vscode")
    "editor.fontFamily": "Cascadia Code", //style chữ như macOS
    "editor.lineHeight": 25, //các dòng chữ cách nhau như thế nào 
    "editor.letterSpacing": 0.75, //các chữ cách nhau 
    "editor.fontSize": 15, //size chữ
    "editor.fontWeight": "normal", 
    "editor.fontLigatures": true,
    "editor.tokenColorCustomizations": {

    }
}

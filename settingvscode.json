{
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.CustomBrowser": "chrome",
    "[python]": {
        "editor.formatOnType": true
    }, //theme màu tím (có thể lên gõ "theme vscode")
    "editor.fontFamily": "JetBrains Mono ExtraBold, SF Mono, 'Courier New', Arial, Helvetica, sans-serif, monospace", //style chữ như macOS
    "editor.lineHeight": 27, //các dòng chữ cách nhau như thế nào 
    "editor.letterSpacing": 1.5, //các chữ cách nhau 
    "editor.fontSize": 14.5, //size chữ
    "editor.fontWeight": "normal", 
    "editor.fontLigatures": true, // kí hiệu các dấu toán tử như toán học (>=, <=, <->)
    "terminal.integrated.fontFamily": "Cascadia Mono, 'Courier New', monospaces",
    
    "redhat.telemetry.enabled": true , 

    "editor.tokenColorCustomizations": {
        // tên theme muốn mod
        "[Pretty Purple]": {
            // chỉnh màu text 
             "textMateRules": [
                {
                    "scope": "keyword.control",
                    "settings": {
                        // foreground là màu chữ
                        "foreground": "#00FBBE",
                        // fontstyle là style chữ (ví dụ: đậm là bold, nghiên là italic)
                        "fontStyle": "italic bold"
                    }
                },
                {
                    "scope": "storage.type",
                    "settings": {
                        "foreground": "#fba300",
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": "meta.function-call",
                    "settings": {
                        "foreground": "#be33fa", //#338cfa (màu xanh)
                        "fontStyle": "bold"  // giúp tất cả chữ có màu thành style 'Bold'
                    }
                },
                {
                    "scope": "constant.numeric",
                    "settings": {
                        "foreground": "#35dbfc",
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": "source.json meta.structure.dictionary.json support.type.property-name.json",
                    "settings": {
                        "foreground": "#459ef7"
                    }
                },
                /* {
                    "scope": ["comment","punctuation.definition.comment"],
                    "settings": {
                        "foreground": "#a57cf2",
                        "fontStyle": "",
                    }
                },  */
                {
                    "scope": "variable.other.global.cpp",
                    "settings": {
                        "foreground": "#c6a6ff",
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": ["keyword","storage.modifier"],
                    "settings": {
                        "foreground": "#fc4d4d",
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": ["entity.name.function","variable.function","support.function",],
                    "settings": {
                        "foreground": "#00ffff",
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": ["variable","string constant.other.placeholder"],
                    "settings": {
                        "foreground": "#FF7EDB"
                    }
                },
                /* {
                    "scope": "variable.parameter",
                    "settings": {
                        "foreground": "#ff00a6",
                        "fontStyle": "bold"
                    }
                } */
            ]
        }
    },
